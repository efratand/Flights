<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.myapps.and.flights.ConfirmationActivity">

    <TextView
        android:text="Reservation Confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirmationTV"
        android:textSize="18sp"
        android:layout_weight="2"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="normal|bold|italic"
        android:layout_margin="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/countryTV"
        android:textSize="18sp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/cityTV"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:layout_margin="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/cpriceTV"
            android:layout_weight="6"
            android:textSize="18sp"
            android:gravity="right"
            android:focusable="false"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="0dp"
            android:id="@+id/ccurrencyTV"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:gravity="left"
            android:focusable="false"
            android:focusableInTouchMode="false" />

    </LinearLayout>

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveBtn"
        android:layout_gravity="center" />
</LinearLayout>
